{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "BDSP Event Script",
  "scopeName": "source.bdsp-ev",
  "patterns": [
    { "include": "#comments" },
    { "include": "#labels" },
    { "include": "#defines" },
    { "include": "#commands" },
    { "include": "#variables" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#comparators" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.semicolon.bdsp-ev",
          "match": ";.*$"
        },
        {
          "name": "comment.line.double-slash.bdsp-ev",
          "match": "//.*$"
        }
      ]
    },
    "labels": {
      "patterns": [
        {
          "name": "entity.name.function.label.bdsp-ev",
          "match": "^[a-zA-Z_][a-zA-Z0-9_]*:",
          "captures": {
            "0": { "name": "entity.name.function.label.bdsp-ev" }
          }
        }
      ]
    },
    "defines": {
      "patterns": [
        {
          "name": "keyword.control.define.bdsp-ev",
          "match": "^\\.define\\b"
        }
      ]
    },
    "commands": {
      "patterns": [
        {
          "name": "entity.name.function.command.bdsp-ev",
          "match": "_[A-Z_][A-Z0-9_]*(?=\\s*\\()"
        },
        {
          "name": "entity.name.function.command.bdsp-ev",
          "match": "\\b[A-Z_][A-Z0-9_]*(?=\\s*\\()"
        }
      ]
    },
    "variables": {
      "patterns": [
        {
          "name": "variable.other.work.bdsp-ev",
          "match": "@[a-zA-Z0-9_\\-]+"
        },
        {
          "name": "variable.other.flag.bdsp-ev",
          "match": "#[a-zA-Z0-9_\\-]+"
        },
        {
          "name": "variable.other.sysflag.bdsp-ev",
          "match": "\\$[a-zA-Z0-9_\\-]+"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.bdsp-ev",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.bdsp-ev",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.quoted.single.bdsp-ev",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.bdsp-ev",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.float.bdsp-ev",
          "match": "-?\\d+\\.\\d+([eE][\\-+]?\\d+)?"
        },
        {
          "name": "constant.numeric.integer.bdsp-ev",
          "match": "-?\\d+"
        }
      ]
    },
    "comparators": {
      "patterns": [
        {
          "name": "keyword.operator.comparison.bdsp-ev",
          "match": "\\b(GE|GT|LE|LT|EQ|NE)\\b"
        }
      ]
    }
  }
}
